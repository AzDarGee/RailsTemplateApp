<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header">
          <h3 class="mb-0">Make a Payment</h3>
        </div>
        <div class="card-body">
          <%= form_with url: payments_path, method: :post, data: { turbo: false } do |form| %>
            <div class="mb-3">
              <%= form.label :amount, "Payment Amount ($)", class: "form-label" %>
              <%= form.number_field :amount, value: @payment_amount, min: 1, step: "0.01", class: "form-control", required: true %>
            </div>
            
            <div class="mb-3">
              <%= form.label :description, "Payment Description", class: "form-label" %>
              <%= form.text_field :description, value: @payment_description, class: "form-control", required: true %>
            </div>
            
            <div class="alert alert-info">
              <p class="mb-0">You'll be redirected to Stripe to complete your payment securely.</p>
            </div>
            
            <div class="d-grid gap-2">
              <%= form.submit "Proceed to Payment", class: "btn btn-primary btn-lg" %>
              <%= link_to "Cancel", root_path, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 