<%= turbo_stream_from "chat_#{@chat.id}" %>

<% content_for :title, "Chat ##{@chat.id}" %>

<div class="row p-4">
  <div class="col-12 d-flex flex-column">
    <div class="card rounded-0 shadow-sm max-h-[calc(100dvh-5rem)]">
      <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
          <%= link_to chats_path, class: "btn btn-sm btn-outline-secondary me-2" do %>
            <i class="fa-solid fa-arrow-left"></i>
            <span class="d-none d-sm-inline ms-1">Back</span>
          <% end %>
          <h5 class="mb-0">Chat <%= @chat.id %></h5>
        </div>
        <div>
          <span class="badge text-bg-light border">
            <i class="fa-solid fa-microchip me-1"></i>
            <%= @chat.model.name %>
          </span>
        </div>
      </div>

      <div class="card-body p-0 d-flex flex-column" style="max-height: calc(100vh - 245px); min-height: calc(100vh - 245px);">
        <div id="messages" data-controller="scroll" class="p-3 flex-grow-1 overflow-auto" style="min-height: 0;">
          <% @chat.messages.where.not(id: nil).each do |message| %>
            <%= render message %>
          <% end %>
        </div>
      </div>

      <div class="card-footer bg-body-tertiary">
        <%= render "messages/form", chat: @chat, message: @message %>
      </div>
    </div>
  </div>
</div>