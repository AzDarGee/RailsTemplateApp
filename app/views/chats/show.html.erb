<%= turbo_stream_from "chat_#{@chat.id}" %>

<% content_for :title, "Chat ##{@chat.id}" %>

<div class="row g-0 min-vh-100 p-4 p-md-5">
  <div class="col-12 col-lg-10 col-xl-8 mx-auto d-flex flex-column">
    <div class="card rounded-3 h-100 shadow-sm overflow-hidden" style="max-height: calc(100vh - 125px);">
      <div class="card-header d-flex align-items-center justify-content-between bg-body-tertiary py-3">
        <div class="d-flex align-items-center gap-2">
          <%= link_to chats_path, class: "btn btn-sm btn-outline-secondary" do %>
            <i class="fa-solid fa-arrow-left"></i>
            <span class="d-none d-sm-inline ms-1">Back</span>
          <% end %>
          <h5 class="mb-0 fw-semibold">Chat <%= @chat.id %></h5>
        </div>
        <div class="d-flex align-items-center gap-2">
          <span class="badge rounded-pill text-bg-light border px-3 py-2">
            <i class="fa-solid fa-microchip me-1"></i>
            <%= @chat.model.name %>
          </span>
          <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteChatModal-<%= @chat.id %>">
            <i class="fa-regular fa-trash-can"></i>
            <span class="d-none d-sm-inline ms-1">Delete</span>
          </button>
        </div>
      </div>

      <div class="card-body p-0 d-flex flex-column" style="min-height: 0;">
        <div id="messages" data-controller="scroll" class="p-3 flex-grow-1 overflow-auto" style="min-height: 0;">
          <% @chat.messages.where.not(id: nil).each do |message| %>
            <%= render message %>
          <% end %>
        </div>
      </div>

      <div class="card-footer bg-body-tertiary py-3">
        <%= render "messages/form", chat: @chat, message: @message %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="deleteChatModal-<%= @chat.id %>" tabindex="-1" aria-labelledby="deleteChatModalLabel-<%= @chat.id %>" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteChatModalLabel-<%= @chat.id %>">Delete chat <%= @chat.id %>?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this chat? This action cannot be undone.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <%= form_with url: chat_path(@chat), method: :delete, data: { turbo: false } do |f| %>
          <%= f.button class: "btn btn-danger" do %>
            <i class="fa-regular fa-trash-can me-1"></i>
            Delete
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>