<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <!-- Hero Section -->
          <div class="text-center mb-5">
            <h1 class="display-5 fw-bold mb-3">
              <span class="display-1 text-primary">Genesis</span>
              <span class="d-block">Rails Template App</span>
            </h1>
            <p class="lead text-muted mb-4">
              A brief description of your product or service. Make it compelling and focused on the value you provide to your users.
            </p>
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
              <%= link_to "Get started", "#", class: "btn btn-primary btn-lg px-4 gap-3" %>
              <%= link_to "Learn more", "#", class: "btn btn-outline-secondary btn-lg px-4" %>
            </div>
          </div>

          <!-- Image Section -->
          <div class="text-center">
            <img src="https://images.unsplash.com/photo-1551434678-e076c223a692" 
                 alt="Product image" 
                 class="img-fluid rounded shadow-sm" 
                 style="max-height: 400px; object-fit: cover;">
          </div>

          <!-- Icon Demo -->
          <div class="text-center mt-5">
            <i class="fa-solid fa-house fa-beat fa-2x text-primary"></i>
          </div>

          <!-- Modal Demo -->
          <div class="text-center mt-5">
            <button class="btn btn-primary" 
                    type="button"
                    data-bs-toggle="modal" 
                    data-bs-target="#testModal"
                    aria-label="Open test modal"
                    aria-controls="testModal"
                    aria-expanded="false">
              Launch Modal
            </button>

            <!-- Modal -->
            <div class="modal fade" 
                id="testModal" 
                tabindex="-1"
                role="dialog"
                aria-labelledby="testModalLabel"
                aria-modal="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="testModalLabel">Test Modal</h5>
                    <button type="button" 
                            class="btn-close" 
                            data-bs-dismiss="modal"
                            aria-label="Close modal">
                    </button>
                  </div>
                  <div class="modal-body">
                    If you see this modal, Bootstrap JS is working!
                  </div>
                  <div class="modal-footer">
                    <button type="button" 
                            class="btn btn-primary" 
                            data-bs-dismiss="modal">
                      Close
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>


        </div>
      </div>
    </div>
  </div>
</div>