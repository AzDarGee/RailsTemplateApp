<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="m-0">Add New Agent</h5>
        </div>
        <div class="card-body">
          <%= form_with(model: @agent, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control", required: true %>
            </div>
            <div class="mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 3, required: true %>
            </div>
            <div class="mb-3">
              <%= form.label :instructions, class: "form-label" %>
              <%= form.text_area :instructions, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= form.label :tools, class: "form-label" %>
              <%= form.text_field :tools, class: "form-control" %>
            </div>
            <div class="d-flex justify-content-end">
              <%= form.submit "Create Agent", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>