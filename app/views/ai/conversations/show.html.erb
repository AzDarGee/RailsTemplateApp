<div class="container-fluid py-4 px-4">
  <div class="row">
    <!-- Left sidebar - Agent details and conversations list -->
    <div class="col-md-4 col-lg-3 d-flex flex-column" style="height: calc(100vh - 130px);">
      <!-- Agent details card -->
      <div class="card shadow-sm mb-3">
        <div class="card-body p-3">
          <div class="d-flex align-items-center mb-3">
            <% if current_user.avatar.attached? %>
              <%= image_tag(current_user.avatar.variant(resize_to_limit: [50, 50]), alt: @agent.name, class: "img-fluid rounded-circle me-3") %>
            <% end %>
            <div>
              <h5 class="mb-0"><%= @agent.name.humanize %></h5>
              <span class="badge bg-success">Online</span>
            </div>
          </div>
          
          <div class="small text-muted mb-3">
            <%= @agent.description %>
          </div>
          
          <div class="d-grid">
            <%= button_to ai_agent_conversations_path(@agent), 
                method: :post, 
                class: 'btn btn-primary w-100',
                form_class: 'conversation-form',
                data: { controller: "conversation" } do %>
              <div class="d-flex align-items-center justify-content-center">
                <span data-conversation-target="buttonText"><i class="bi bi-plus-circle me-1"></i> Start New Conversation</span>
                <div data-conversation-target="loadingIndicator" class="spinner-border spinner-border-sm ms-2 d-none" role="status">
                  <span class="visually-hidden">Loading...</span>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Conversations list -->
      <div class="card shadow-sm flex-grow-1 d-flex flex-column overflow-auto">
        <div class="card-header bg-white py-3">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Conversations</h5>
            <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#conversationsFilter">
              <i class="bi bi-funnel"></i>
            </button>
          </div>
          
          <%= turbo_frame_tag "conversations_filter" do %>
            <div class="collapse mt-2" id="conversationsFilter">
              <%= form_with url: ai_agent_path(@agent), method: :get, data: { turbo_frame: "conversations_list" } do |form| %>
                <div class="input-group input-group-sm">
                  <%= form.text_field :query, class: "form-control", placeholder: "Search conversations...", oninput: "this.form.requestSubmit()" %>
                  <button class="btn btn-outline-secondary" type="submit">
                    <i class="bi bi-search"></i>
                  </button>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <div class="card-body p-0 overflow-auto flex-grow-1" style="max-height: 100%;">
          <%= turbo_stream_from "agent_#{@agent.id}_conversations" %>
          <%= turbo_frame_tag "conversations_list" do %>
            <div class="list-group list-group-flush border-bottom">
              <% @agent.conversations.where(user: current_user).order(created_at: :desc).each do |conversation| %>
                <%= render partial: "ai/conversations/conversation_item", locals: { conversation: conversation, agent: @agent, current_conversation: @conversation } %>
              <% end %>
              
              <% if @agent.conversations.where(user: current_user).empty? %>
                <div class="text-center py-5 text-muted">
                  <i class="bi bi-chat-dots fs-1 mb-3"></i>
                  <p>No conversations yet</p>
                  <small>Start a new conversation to begin chatting</small>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Right side - Chat area -->
    <div class="col-md-8 col-lg-9 d-flex flex-column" style="height: calc(100vh - 130px);">
      <%= turbo_frame_tag "conversation_content", data: { turbo_action: "advance" } do %>
        <div class="card shadow-sm d-flex flex-column shadow-sm flex-grow-1 overflow-auto" style="height: calc(100vh - 130px);">
          <!-- Chat header -->
          <div class="card-header bg-white py-3 border-bottom">
            <div class="d-flex justify-content-between align-items-center">
              <div class="d-flex align-items-center">
                <h5 class="mb-0" id="current-conversation-title">
                  <% if @conversation %>
                    <%= @conversation.title || "Conversation #{@conversation.id}" %>
                  <% else %>
                    Select a conversation
                  <% end %>
                </h5>
                <span class="badge bg-primary ms-2 <%= @conversation ? '' : 'd-none' %>">Active</span>
              </div>
              <% if @conversation %>
                <div class="btn-group">
                  <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#conversationSettings" title="Settings">
                    <i class="bi bi-gear"></i>
                  </button>
                  <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#conversationInfo" title="Information">
                    <i class="bi bi-info-circle"></i>
                  </button>
                </div>
              <% end %>
            </div>
            
            <div class="collapse mt-2" id="conversationSettings">
              <div class="card card-body py-2">
                <div class="d-flex justify-content-between align-items-center">
                  <div>Conversation settings</div>
                  <% if @conversation %>
                    <%= button_to ai_agent_conversation_path(@agent, @conversation), 
                        method: :delete,
                        class: "btn btn-sm btn-outline-danger", 
                        form: { data: { turbo_frame: "_top", turbo_confirm: "Are you sure you want to delete this conversation?" } } do %>
                      <i class="bi bi-trash"></i> Delete conversation
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
            
            <div class="collapse mt-2" id="conversationInfo">
              <div class="card card-body py-2">
                <div>
                  <strong>Agent:</strong> <%= @agent.name.humanize %>
                </div>
                <div>
                  <strong>Tools:</strong> <%= @agent.tools.present? ? @agent.tools : "No specific tools configured" %>
                </div>
                <% if @conversation %>
                  <div>
                    <strong>Created:</strong> <%= @conversation.created_at.strftime('%B %d, %Y at %I:%M %p') %>
                  </div>
                  <div>
                    <strong>Messages:</strong> <%= @conversation&.messages&.count || 0 %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- Chat messages area -->
          <div class="card-body p-0 flex-grow-1 overflow-hidden">
            <% if @conversation %>
              <%= turbo_stream_from "conversation_#{@conversation.id}_messages" %>
              
              <div class="d-flex flex-column p-4 overflow-auto h-100" id="messages-container" 
                   data-controller="chat" 
                   data-chat-target="container"
                   style="max-height: calc(100vh - 100px);">
                <% if @conversation.messages.exists? %>
                  <% @conversation.messages.order(created_at: :asc).each do |message| %>
                    <%= render partial: "ai/messages/message", locals: { message: message, agent: @agent } %>
                  <% end %>
                <% else %>
                  <div class="text-center text-muted my-5">
                    <p>No messages yet</p>
                    <small>Type a message below to start the conversation</small>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="d-flex flex-column align-items-center justify-content-center h-100 text-center text-muted p-4 overflow-auto">
                <div class="mb-4">
                  <i class="bi bi-robot fs-1"></i>
                </div>
                <h4><%= @agent.name.humanize %></h4>
                <p class="mb-4"><%= @agent.instructions %></p>
                <div class="bg-light rounded p-3 mb-3 w-75">
                  <h6>Tools</h6>
                  <p class="small mb-0"><%= @agent.tools.present? ? @agent.tools : "No specific tools configured" %></p>
                </div>
                <p>Choose a conversation from the list or create a new one to start chatting</p>
              </div>
            <% end %>
          </div>
          
          <!-- Chat input area -->
          <% if @conversation %>
            <div class="card-footer bg-white p-3 border-top">
              <%= form_with url: ai_agent_conversation_messages_path(@agent, @conversation), 
                  method: :post,
                  id: "message-form", 
                  class: "d-flex" do |form| %>
                <div class="input-group">
                  <%= form.text_area :content, 
                      class: "form-control", 
                      placeholder: "Type your message...", 
                      rows: 1, 
                      required: true,
                      style: "resize: none; max-height: 120px; overflow-y: auto;",
                      data: { controller: "auto-resize" } %>
                  <%= form.submit "Send", class: "btn btn-primary" %>
                </div>
              <% end %>
              <div class="d-flex justify-content-between align-items-center mt-2">
                <div class="small text-muted">
                  <i class="bi bi-info-circle"></i> Press Enter to send, Shift+Enter for new line
                </div>
                <div>
                  <% if false # Disabled for now %>
                    <button class="btn btn-sm btn-link text-muted p-0" title="Upload file">
                      <i class="bi bi-paperclip"></i>
                    </button>
                    <button class="btn btn-sm btn-link text-muted p-0 ms-2" title="Voice message">
                      <i class="bi bi-mic"></i>
                    </button>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .conversation-link {
    transition: all 0.2s ease;
    border-left: 3px solid transparent;
  }
  
  .conversation-link:hover {
    background-color: rgba(13, 110, 253, 0.05);
  }
  
  .conversation-link.active {
    background-color: rgba(13, 110, 253, 0.1);
    border-left: 3px solid #0d6efd;
  }
  
  .message {
    max-width: 80%;
    margin-bottom: 1rem;
  }
  
  .message-user {
    align-self: flex-end;
    background-color: #0d6efd;
    color: white;
    border-radius: 18px 18px 0 18px;
  }
  
  .message-agent {
    align-self: flex-start;
    background-color: #f0f2f5;
    color: #212529;
    border-radius: 18px 18px 18px 0;
  }
  
  .message-time {
    font-size: 0.75rem;
    color: rgba(0, 0, 0, 0.5);
  }
  
  .message-user .message-time {
    color: rgba(255, 255, 255, 0.7);
  }
</style>