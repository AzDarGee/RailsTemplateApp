<div class="container py-5">
  <div class="row">
    <div class="col-lg-3">
      <div class="card mb-4">
        <div class="card-header">
          Billing Management
        </div>
        <div class="list-group list-group-flush">
          <%= link_to "Subscriptions", subscriptions_path, class: "list-group-item list-group-item-action" %>
          <%= link_to "Payment Methods", billing_subscriptions_path, class: "list-group-item list-group-item-action active" %>
          <%= link_to "Payment History", payments_path, class: "list-group-item list-group-item-action" %>
        </div>
      </div>
    </div>
    
    <div class="col-lg-9">
      <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Payment Methods</h5>
          <button class="btn btn-sm btn-primary" id="add-payment-method">
            <i class="bi bi-plus"></i> Add Payment Method
          </button>
        </div>
        <div class="card-body">
          <% if current_user.payment_processor&.payment_methods&.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Card</th>
                    <th>Expires</th>
                    <th>Default</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% current_user.payment_processor.payment_methods.each do |method| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <% if method.card_brand == "visa" %>
                            <i class="bi bi-credit-card me-2"></i>
                          <% elsif method.card_brand == "mastercard" %>
                            <i class="bi bi-credit-card-2-front me-2"></i>
                          <% else %>
                            <i class="bi bi-credit-card-2-back me-2"></i>
                          <% end %>
                          <%= method.card_brand.capitalize %> ending in <%= method.card_last4 %>
                        </div>
                      </td>
                      <td><%= method.card_exp_month %>/<%= method.card_exp_year %></td>
                      <td>
                        <% if method == current_user.payment_processor.default_payment_method %>
                          <span class="badge bg-success">Default</span>
                        <% else %>
                          <%= button_to "Make Default", set_default_payment_method_path(method.id), method: :patch, class: "btn btn-sm btn-outline-primary" %>
                        <% end %>
                      </td>
                      <td>
                        <%= button_to "Remove", delete_payment_method_path(method.id), method: :delete, class: "btn btn-sm btn-outline-danger", data: { turbo_confirm: "Are you sure you want to remove this payment method?" } %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-credit-card mb-3" style="font-size: 3rem;"></i>
              <h5>No Payment Methods Added</h5>
              <p class="text-muted">You haven't added any payment methods yet.</p>
              <button class="btn btn-primary mt-2" id="add-first-payment-method">
                Add Payment Method
              </button>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="card shadow-sm">
        <div class="card-header">
          <h5 class="mb-0">Billing Address</h5>
        </div>
        <div class="card-body">
          <%= form_with model: current_user, url: update_billing_address_subscriptions_path, method: :patch, class: "row g-3" do |f| %>
            <div class="col-md-6">
              <%= f.label :billing_name, "Full Name", class: "form-label" %>
              <%= f.text_field :billing_name, class: "form-control" %>
            </div>
            <div class="col-md-6">
              <%= f.label :billing_email, "Email", class: "form-label" %>
              <%= f.email_field :billing_email, class: "form-control" %>
            </div>
            <div class="col-12">
              <%= f.label :billing_address, "Address", class: "form-label" %>
              <%= f.text_field :billing_address, class: "form-control" %>
            </div>
            <div class="col-md-6">
              <%= f.label :billing_city, "City", class: "form-label" %>
              <%= f.text_field :billing_city, class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.label :billing_state, "State/Province", class: "form-label" %>
              <%= f.text_field :billing_state, class: "form-control" %>
            </div>
            <div class="col-md-2">
              <%= f.label :billing_zip, "Zip/Postal", class: "form-label" %>
              <%= f.text_field :billing_zip, class: "form-control" %>
            </div>
            <div class="col-12">
              <%= f.label :billing_country, "Country", class: "form-label" %>
              <%= f.country_select :billing_country, { priority_countries: ["US", "CA", "GB"] }, class: "form-select" %>
            </div>
            <div class="col-12 mt-4">
              <%= f.submit "Update Billing Address", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="payment-method-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Payment Method</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="card-element" class="mb-3">
          <!-- Stripe Elements will be inserted here -->
        </div>
        <div id="card-errors" class="text-danger mb-3"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="save-payment-method">Save Payment Method</button>
      </div>
    </div>
  </div>
</div>

<%= content_for :head do %>
  <script src="https://js.stripe.com/v3/"></script>
<% end %>

<%= content_for :javascript do %>
  <script>
    document.addEventListener('turbo:load', function() {
      const stripe = Stripe('<%= Rails.application.credentials.dig(:stripe, :test, :public_key) %>');
      const elements = stripe.elements();
      const cardElement = elements.create('card');
      cardElement.mount('#card-element');

      const addPaymentMethodBtn = document.getElementById('add-payment-method');
      const addFirstPaymentMethodBtn = document.getElementById('add-first-payment-method');
      const paymentMethodModal = new bootstrap.Modal(document.getElementById('payment-method-modal'));
      const savePaymentMethodBtn = document.getElementById('save-payment-method');
      const cardErrors = document.getElementById('card-errors');
      
      if (addPaymentMethodBtn) {
        addPaymentMethodBtn.addEventListener('click', function() {
          paymentMethodModal.show();
        });
      }
      
      if (addFirstPaymentMethodBtn) {
        addFirstPaymentMethodBtn.addEventListener('click', function() {
          paymentMethodModal.show();
        });
      }
      
      if (savePaymentMethodBtn) {
        savePaymentMethodBtn.addEventListener('click', async function() {
          savePaymentMethodBtn.disabled = true;
          
          try {
            const result = await stripe.createPaymentMethod({
              type: 'card',
              card: cardElement
            });
            
            if (result.error) {
              cardErrors.textContent = result.error.message;
              savePaymentMethodBtn.disabled = false;
            } else {
              const form = document.createElement('form');
              form.method = 'POST';
              form.action = '<%= create_payment_method_path %>';
              
              const csrfToken = document.querySelector('meta[name="csrf-token"]').content;
              const csrfInput = document.createElement('input');
              csrfInput.type = 'hidden';
              csrfInput.name = 'authenticity_token';
              csrfInput.value = csrfToken;
              
              const methodInput = document.createElement('input');
              methodInput.type = 'hidden';
              methodInput.name = 'payment_method_id';
              methodInput.value = result.paymentMethod.id;
              
              form.appendChild(csrfInput);
              form.appendChild(methodInput);
              document.body.appendChild(form);
              form.submit();
            }
          } catch (error) {
            cardErrors.textContent = error.message;
            savePaymentMethodBtn.disabled = false;
          }
        });
      }
    });
  </script>
<% end %> 