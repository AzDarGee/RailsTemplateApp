<div class="container py-5">
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
      <h4 class="mb-0">AI Agents</h4>
      <%= link_to "New Agent", new_ai_agent_path, class: "btn btn-primary" %>
    </div>
    
    <div class="card-body">
      <% if @agents.empty? %>
        <div class="text-center py-5">
          <i class="bi bi-robot fs-1 text-muted mb-3"></i>
          <h5>No agents found</h5>
          <p class="text-muted">Create your first AI agent to get started</p>
        </div>
      <% else %>
        <div class="row g-4">
          <% @agents.each do |agent| %>
            <div class="col-md-6 col-lg-4" id="agent_<%= agent.id %>">
              <div class="card h-100 shadow-sm border-0 hover-shadow transition">
                <div class="position-relative">
                  <% if current_user.avatar.attached? %>
                    <%= image_tag(current_user.avatar.variant(resize_to_limit: [100, 100]), alt: agent.name , class: "img-fluid rounded-circle") %>
                  <% end %>
                  
                  <div class="position-absolute top-0 end-0 p-2">
                    <span class="badge bg-primary rounded-pill">AI</span>
                  </div>
                </div>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= agent.name.humanize %></h5>
                  <p class="card-text text-muted flex-grow-1">Description of the agent goes here.</p>
                  <div class="d-flex justify-content-between mt-3">
                    <%= link_to ai_agent_path(agent), class: "btn btn-outline-primary" do %>
                      <i class="bi bi-box-arrow-up-right me-1"></i> Open
                    <% end %>
                    <%= link_to ai_agent_path(agent), 
                        data: { 
                          turbo_method: :delete, 
                          turbo_confirm: "Are you sure you want to delete this agent?" 
                        }, 
                        class: "btn btn-outline-danger" do %>
                      <i class="bi bi-trash me-1"></i> Delete
                    <% end %>
                  </div>
                </div>
                <div class="card-footer bg-white text-muted small py-2">
                  <i class="bi bi-clock me-1"></i> Created <%= time_ago_in_words(agent.created_at) %> ago
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .hover-shadow:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
  }
  .transition {
    transition: all 0.3s ease;
  }
</style>
