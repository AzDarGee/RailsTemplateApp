<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h1 class="display-4 text-success mb-4">
            <i class="fas fa-check-circle"></i>
          </h1>
          <h2 class="mb-4">Thank You!</h2>
          <p class="lead mb-4">Your subscription has been successfully activated.</p>
          
          <div class="subscription-details mb-4">
            <h4>Subscription Details</h4>
            <p>Plan: <%= @subscription.name %></p>
            <p>Status: <span class="badge bg-success">Active</span></p>
            <p>Next billing date: <%= Time.at(@subscription.current_period_end).strftime("%B %d, %Y") %></p>
          </div>

          <div class="d-grid gap-2">
            <%= link_to "View Subscription Details", subscription_path(@subscription), class: "btn btn-primary" %>
            <%= link_to "Back to Dashboard", root_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 