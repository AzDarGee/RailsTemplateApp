<p style="color: green"><%= notice %></p>

<%# render @ai_conversation %>

<div>
  <%# link_to "Edit this conversation", edit_ai_conversation_path(@ai_conversation) %>
  <%# link_to "Back to conversations", ai_conversations_path %>

  <%# button_to "Destroy this conversation", @ai_conversation, method: :delete %>
</div>


<div class="container mt-4">
  <div class="row">
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Conversations</h5>
          <%= link_to "New Chat", ai_agent_conversations_path(@ai_agent), method: :post, class: "btn btn-sm btn-primary", data: { turbo_method: :post } %>
        </div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush" id="conversations-list">
            <%= render partial: "ai/conversations/conversation", collection: @ai_agent.conversations.where(user: current_user).order(created_at: :desc), locals: { active: @ai_conversation } %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-8">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0"><%= @ai_conversation.title %></h5>
          <small><%= @ai_agent.name %></small>
        </div>
        
        <div class="card-body">
          <div class="chat-messages p-3" style="height: 400px; overflow-y: auto;" id="messages" data-controller="scroll">
            <%= turbo_stream_from "conversation_#{@ai_conversation.id}" %>
            <div id="message-list">
              <%= render @messages %>
            </div>
          </div>
        </div>
        
        <div class="card-footer">
          <%= render "ai/messages/form", agent: @ai_agent, conversation: @ai_conversation, message: @message %>
        </div>
      </div>
    </div>
  </div>
</div>