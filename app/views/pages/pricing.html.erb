<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="card shadow-sm">
        <div class="card-header bg-white py-4">
          <h1 class="display-4 fw-bold text-center mb-2">Pricing</h1>
          <p class="lead text-muted text-center mb-0">Choose the perfect plan for your needs</p>
        </div>

        <div class="card-body p-4">
          <div class="d-flex justify-content-center mb-4">
            <div class="btn-group" role="group" aria-label="Billing interval toggle">
              <button type="button" class="btn btn-secondary active" data-interval-toggle="month" aria-pressed="true">
                <i class="fas fa-calendar-alt me-1"></i> Monthly
              </button>
              <button type="button" class="btn btn-outline-secondary" data-interval-toggle="year" aria-pressed="false">
                <i class="fas fa-calendar-check me-1"></i> Yearly
              </button>
            </div>
          </div>

          <div id="plansGrid" class="row row-cols-1 row-cols-md-3 g-4">
            <% BillingPlans.all.each_with_index do |bp, idx| %>
              <div class="col plan-card" data-interval="<%= bp.interval.to_s %>">
                <div class="card h-100 shadow <%= idx == 1 ? 'border border-primary' : '' %>">
                  <div class="card-header <%= idx == 1 ? 'bg-primary text-white' : 'bg-white' %> py-3">
                    <h4 class="my-0 fw-bold text-center"><%= bp.name %></h4>
                  </div>
                  <div class="card-body">
                    <div class="text-center mb-4">
                      <span class="display-4 fw-bold"><%= plan_display_price(bp.key, bp.price_cents) %></span>
                    </div>
                    <ul class="list-unstyled">
                      <li class="mb-3">
                        <i class="fas fa-check text-success me-2"></i><%= bp.interval.to_s.titleize %> billing
                      </li>
                      <li class="mb-3">
                        <i class="fas fa-check text-success me-2"></i>Includes core features
                      </li>
                    </ul>
                    <div class="d-grid">
                      <% if current_user.payment_processor.present? %>
                        <%= button_to "Subscribe to #{bp.name}", billing_checkout_path(plan: bp.key), method: :post, form: { data: { turbo: false } }, class: "btn #{idx == 1 ? 'btn-primary' : 'btn-outline-primary'} w-100" %>
                      <% else %>
                        <%= button_to "Add Payment Method", billing_payment_methods_path, method: :get, class: "btn btn-outline-primary w-100" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <script>
              function pricingToggleInit() {
                const grid = document.getElementById("plansGrid");
                const buttons = document.querySelectorAll('[data-interval-toggle]');
                if (!grid || buttons.length === 0) return;

                const show = (interval) => {
                  document.querySelectorAll('.plan-card').forEach(card => {
                    const isVisible = card.dataset.interval === interval;
                    card.style.display = isVisible ? '' : 'none';
                  });
                };

                // Determine default interval by active button
                let defaultInterval = 'month';
                const activeBtn = Array.from(buttons).find(b => b.classList.contains('active'));
                if (activeBtn) defaultInterval = activeBtn.getAttribute('data-interval-toggle') || defaultInterval;

                show(defaultInterval);

                buttons.forEach(btn => {
                  btn.addEventListener('click', () => {
                    const chosen = btn.getAttribute('data-interval-toggle');
                    buttons.forEach(b => {
                      const isActive = b === btn;
                      b.classList.toggle('active', isActive);
                      b.classList.toggle('btn-secondary', isActive);
                      b.classList.toggle('btn-outline-secondary', !isActive);
                      b.setAttribute('aria-pressed', isActive ? 'true' : 'false');
                    });
                    show(chosen);
                  });
                });
              }
              document.addEventListener("turbo:load", pricingToggleInit);
              document.addEventListener("DOMContentLoaded", pricingToggleInit);
            </script>
          </div>

          <!-- FAQ Section -->
          <div class="mt-5">
            <h2 class="text-center mb-4">Frequently Asked Questions</h2>
            <div class="row justify-content-center">
              <div class="col-lg-10">
                <div class="accordion" id="pricingFaq">
                  <div class="accordion-item">
                    <h3 class="accordion-header">
                      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                        Can I change plans later?
                      </button>
                    </h3>
                    <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#pricingFaq">
                      <div class="accordion-body">
                        Yes, you can upgrade or downgrade your plan at any time. Changes will be reflected in your next billing cycle.
                      </div>
                    </div>
                  </div>

                  <div class="accordion-item">
                    <h3 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                        What payment methods do you accept?
                      </button>
                    </h3>
                    <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#pricingFaq">
                      <div class="accordion-body">
                        We accept all major credit cards, PayPal, and bank transfers for enterprise customers.
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>