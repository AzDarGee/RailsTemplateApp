<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="m-0">Agent Details</h5>
        </div>
        <div class="card-body">
          <div id="agent-details">
            <h5 class="card-title">
              <%= image_tag 'https://via.placeholder.com/150', class: 'img-fluid' %>
              <span><%= @agent.name.humanize %></span>
            </h5>
            <p class="card-text">
              <span><%= @agent.description %></span>
            </p>
            <div class="mb-3">
              <span><%= @agent.instructions %></span>
            </div>
            <div class="mb-3">
              <span><%= @agent.tools %></span>
            </div>
            <div class="mb-3">
              <%= link_to 'Start Conversation', ai_conversations_path, class: 'btn btn-primary start-conversation' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
