<div class="container py-5" id="agent-<%= @agent.id %>-container">
  <div class="row">
    <!-- Agent Information Card -->
    <div class="col-lg-4 mb-4">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <% if current_user.avatar.attached? %>
              <%= image_tag(current_user.avatar.variant(resize_to_limit: [100, 100]), alt: @agent.name, class: "img-fluid rounded-circle mb-3", style: "width: 100px; height: 100px; object-fit: cover;") %>
            <% end %>
            <h3 class="fw-bold"><%= @agent.name.humanize %></h3>
            <span class="badge bg-success rounded-pill px-3 py-2 mb-2">
              <i class="fas fa-circle me-1 small"></i> Online
            </span>
            <p class="text-muted"><%= @agent.description %></p>
          </div>
          
          <div class="border-top pt-3">
            <h5 class="mb-3"><i class="fas fa-tools me-2"></i> Tools</h5>
            <% if @agent.tools.present? %>
              <p class="mb-3"><%= @agent.tools %></p>
            <% else %>
              <p class="text-muted mb-3">No specific tools configured</p>
            <% end %>
          </div>
          
          <div class="border-top pt-3">
            <h5 class="mb-3"><i class="fas fa-info-circle me-2"></i> Instructions</h5>
            <p class="mb-3"><%= @agent.instructions.present? ? @agent.instructions : "No specific instructions provided" %></p>
          </div>
          
          <div class="d-grid gap-2 mt-3">
            <%= turbo_frame_tag "new_conversation_button" do %>
              <%= button_to ai_agent_conversations_path(@agent), 
                  method: :post,
                  class: 'btn btn-primary btn-lg w-100',
                  data: { 
                    turbo: true,
                    turbo_frame: "_top",
                    turbo_action: "advance"
                  } do %>
                <i class="fas fa-plus-circle me-2"></i> Start New Conversation
              <% end %>
            <% end %>
            
            <%= link_to ai_agents_path, class: 'btn btn-outline-secondary' do %>
              <i class="fas fa-arrow-left me-2"></i> Back to Agents
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Conversations List Card -->
    <div class="col-lg-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white p-4 border-0">
          <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-comments me-2"></i> Conversations</h4>
          </div>
        </div>
        
        <div class="card-body p-0" id="conversations-container">
          <% has_conversations = !@agent.conversations.where(user: current_user).empty? %>

          <% unless has_conversations %>
            <div class="text-center py-5" id="empty-conversations-placeholder">
              <i class="fas fa-comment-slash fa-3x text-muted mb-3"></i>
              <h5>No conversations yet</h5>
              <p class="text-muted">Start a new conversation to begin chatting with <%= @agent.name %></p>
            </div>
          <% end %>
            
          <div class="<%= has_conversations ? '' : 'd-none' %>" id="conversations-table-container">
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th scope="col" class="ps-4">Title</th>
                    <th scope="col">Last Message</th>
                    <th scope="col">Created</th>
                    <th scope="col">Updated</th>
                    <th scope="col" class="text-end pe-4">Actions</th>
                  </tr>
                </thead>
                <%= turbo_frame_tag "conversations_list" do %>
                  <tbody id="conversations-list">
                    <%= turbo_stream_from "user_#{current_user.id}_agent_#{@agent.id}_conversations" %>
                    <% conversations = @agent.conversations.where(user: current_user).order(updated_at: :desc) %>
                    
                    <% conversations.each do |conversation| %>
                      <%= render partial: "ai/conversations/conversation_row", locals: { conversation: conversation, agent: @agent } %>
                    <% end %>
                  </tbody>
                <% end %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<%= turbo_frame_tag "delete_modal" do %>
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this conversation? This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <div id="delete_form_container">
            <!-- The delete form will be inserted here by Turbo -->
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

