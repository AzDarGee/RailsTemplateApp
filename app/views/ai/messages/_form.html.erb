<%= form_with scope: :ai, url: ai_agent_conversation_messages_path(agent, conversation), class: "d-flex", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } do |form| %>
  <%= form.text_field :content, class: "form-control me-2", placeholder: "Type your message...", required: true, autofocus: true %>
  <%= form.submit "Send", class: "btn btn-primary" %>
<% end %>