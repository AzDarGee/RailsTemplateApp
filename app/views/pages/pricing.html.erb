<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow-sm">
        <div class="card-header bg-white py-4">
          <h1 class="display-4 fw-bold text-center mb-2">Pricing Plans</h1>
          <p class="lead text-muted text-center mb-0">Choose the perfect plan for your needs</p>
        </div>

        <div class="card-body p-4">
          <div class="row row-cols-1 row-cols-md-3 g-4">
            <!-- Free Tier -->
            <div class="col">
              <div class="card h-100 shadow-sm">
                <div class="card-header bg-white py-3">
                  <h4 class="my-0 fw-bold text-center">Free</h4>
                </div>
                <div class="card-body">
                  <div class="text-center mb-4">
                    <span class="display-4 fw-bold">$0</span>
                    <span class="text-muted">/mo</span>
                  </div>
                  <ul class="list-unstyled">
                    <li class="mb-3">
                      <i class="fas fa-check text-success me-2"></i>Basic features
                    </li>
                    <li class="mb-3">
                      <i class="fas fa-check text-success me-2"></i>1 project
                    </li>
                    <li class="mb-3">
                      <i class="fas fa-check text-success me-2"></i>Community support
                    </li>
                  </ul>
                  <div class="d-grid">
                    <%= link_to "Get started", "#", class: "btn btn-outline-primary" %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Pro Tier -->
            <div class="col">
              <div class="card h-100 shadow border border-primary">
                <div class="card-header bg-primary text-white py-3">
                  <h4 class="my-0 fw-bold text-center">Pro</h4>
                </div>
                <div class="card-body">
                  <div class="text-center mb-4">
                    <span class="display-4 fw-bold"><%= plan_display_price(:pro_monthly, BillingPlans.find(:pro_monthly)&.price_cents) %></span>
                  </div>
                  <ul class="list-unstyled">
                    <li class="mb-3">
                      <i class="fas fa-check text-success me-2"></i>All Free features
                    </li>
                    <li class="mb-3">
                      <i class="fas fa-check text-success me-2"></i>Unlimited projects
                    </li>
                    <li class="mb-3">
                      <i class="fas fa-check text-success me-2"></i>Priority support
                    </li>
                    <li class="mb-3">
                      <i class="fas fa-check text-success me-2"></i>Advanced analytics
                    </li>
                  </ul>
                  <div class="d-grid">
                    <% if user_signed_in? %>
                      <%= button_to "Subscribe to Pro", billing_checkout_path(plan: 'pro_monthly'), method: :post, form: { data: { turbo: false } }, class: "btn btn-primary w-100" %>
                    <% else %>
                      <%= link_to "Sign in to subscribe", new_user_session_path, class: "btn btn-primary" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Enterprise Tier -->
            <div class="col">
              <div class="card h-100 shadow-sm">
                <div class="card-header bg-white py-3">
                  <h4 class="my-0 fw-bold text-center">Enterprise</h4>
                </div>
                <div class="card-body">
                  <div class="text-center mb-4">
                    <span class="display-4 fw-bold"><%= plan_display_price(:enterprise_monthly, BillingPlans.find(:enterprise_monthly)&.price_cents) %></span>
                  </div>
                  <ul class="list-unstyled">
                    <li class="mb-3">
                      <i class="fas fa-check text-success me-2"></i>All Pro features
                    </li>
                    <li class="mb-3">
                      <i class="fas fa-check text-success me-2"></i>24/7 phone support
                    </li>
                    <li class="mb-3">
                      <i class="fas fa-check text-success me-2"></i>Custom integrations
                    </li>
                    <li class="mb-3">
                      <i class="fas fa-check text-success me-2"></i>Dedicated account manager
                    </li>
                  </ul>
                  <div class="d-grid">
                    <% if user_signed_in? %>
                      <%= button_to "Subscribe to Enterprise", billing_checkout_path(plan: 'enterprise_monthly'), method: :post, form: { data: { turbo: false } }, class: "btn btn-outline-primary w-100" %>
                    <% else %>
                      <%= link_to "Sign in to subscribe", new_user_session_path, class: "btn btn-outline-primary" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- FAQ Section -->
          <div class="mt-5">
            <h2 class="text-center mb-4">Frequently Asked Questions</h2>
            <div class="row justify-content-center">
              <div class="col-lg-10">
                <div class="accordion" id="pricingFaq">
                  <div class="accordion-item">
                    <h3 class="accordion-header">
                      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                        Can I change plans later?
                      </button>
                    </h3>
                    <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#pricingFaq">
                      <div class="accordion-body">
                        Yes, you can upgrade or downgrade your plan at any time. Changes will be reflected in your next billing cycle.
                      </div>
                    </div>
                  </div>

                  <div class="accordion-item">
                    <h3 class="accordion-header">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                        What payment methods do you accept?
                      </button>
                    </h3>
                    <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#pricingFaq">
                      <div class="accordion-body">
                        We accept all major credit cards, PayPal, and bank transfers for enterprise customers.
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>