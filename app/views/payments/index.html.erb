<div class="container py-5">
  <div class="row">
    <div class="col-lg-3">
      <div class="card mb-4">
        <div class="card-header">
          Billing Management
        </div>
        <div class="list-group list-group-flush">
          <%= link_to "Subscriptions", subscriptions_path, class: "list-group-item list-group-item-action" %>
          <%= link_to "Payment Methods", billing_subscriptions_path, class: "list-group-item list-group-item-action" %>
          <%= link_to "Payment History", payments_path, class: "list-group-item list-group-item-action active" %>
        </div>
      </div>
    </div>
    
    <div class="col-lg-9">
      <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Payment History</h5>
          <%= link_to "Make a Payment", new_payment_path, class: "btn btn-sm btn-primary" %>
        </div>
        <div class="card-body">
          <% if @payments.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Receipt</th>
                  </tr>
                </thead>
                <tbody>
                  <% @payments.each do |payment| %>
                    <tr>
                      <td>
                        <% if payment.is_a?(Pay::Charge) && payment.data && payment.data["created_at"] %>
                          <%= Time.at(payment.data["created_at"]).strftime("%b %d, %Y") %>
                        <% else %>
                          <%= payment.created_at.strftime("%b %d, %Y") %>
                        <% end %>
                      </td>
                      <td>
                        <% if payment.is_a?(Pay::Charge) %>
                          <span class="badge bg-info">One-time</span>
                        <% elsif payment.is_a?(Pay::Subscription) %>
                          <span class="badge bg-primary">Subscription</span>
                        <% end %>
                      </td>
                      <td>
                        <% if payment.is_a?(Pay::Charge) %>
                          <% if payment.metadata.present? && payment.metadata["description"].present? %>
                            <%= payment.metadata["description"] %>
                          <% else %>
                            Payment
                          <% end %>
                        <% elsif payment.is_a?(Pay::Subscription) %>
                          <%= payment.name || "Subscription" %>
                        <% end %>
                      </td>
                      <td>
                        <% if payment.is_a?(Pay::Charge) %>
                          $<%= sprintf('%.2f', payment.amount / 100.0) %>
                        <% elsif payment.is_a?(Pay::Subscription) %>
                          <% if payment.data && payment.data["amount"] %>
                            $<%= sprintf('%.2f', payment.data["amount"] / 100.0) %> / 
                            <%= payment.data["interval"] == "year" ? "year" : "month" %>
                          <% else %>
                            -
                          <% end %>
                        <% end %>
                      </td>
                      <td>
                        <% if payment.is_a?(Pay::Charge) %>
                          <% if payment.data.dig("status") == "succeeded" %>
                            <span class="badge bg-success">Succeeded</span>
                          <% elsif payment.data.dig("status") == "pending" %>
                            <span class="badge bg-warning">Pending</span>
                          <% elsif payment.data.dig("status") == "failed" %>
                            <span class="badge bg-danger">Failed</span>
                          <% else %>
                            <span class="badge bg-secondary">Unknown</span>
                          <% end %>
                        <% elsif payment.is_a?(Pay::Subscription) %>
                          <% if payment.status == "active" %>
                            <span class="badge bg-success">Active</span>
                          <% elsif payment.status == "canceled" %>
                            <span class="badge bg-danger">Canceled</span>
                          <% elsif payment.status == "past_due" %>
                            <span class="badge bg-warning">Past Due</span>
                          <% else %>
                            <span class="badge bg-secondary"><%= payment.status.titleize %></span>
                          <% end %>
                        <% end %>
                      </td>
                      <td>
                        <% if payment.is_a?(Pay::Charge) && payment.data.dig("status") == "succeeded" && payment.data.dig("receipt_url").present? %>
                          <%= link_to "Receipt", payment.data.dig("receipt_url"), target: "_blank", class: "btn btn-sm btn-outline-primary" %>
                        <% elsif payment.is_a?(Pay::Subscription) %>
                          <%= link_to "Details", subscription_path(payment), class: "btn btn-sm btn-outline-primary" %>
                        <% else %>
                          -
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="bi bi-receipt mb-3" style="font-size: 3rem;"></i>
              <h5>No Payment History</h5>
              <p class="text-muted">You haven't made any payments yet.</p>
              <%= link_to "Make a Payment", new_payment_path, class: "btn btn-primary mt-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 