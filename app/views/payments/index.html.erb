<div class="container mt-5">
  <div class="row mb-4">
    <div class="col-md-8">
      <h1>Payment History</h1>
    </div>
    <div class="col-md-4 text-end">
      <%= link_to "Make a Payment", new_payment_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <% if @payments.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Receipt</th>
                  </tr>
                </thead>
                <tbody>
                  <% @payments.each do |payment| %>
                    <tr>
                      <td><%= payment.created_at.strftime("%b %d, %Y") %></td>
                      <td>
                        <% if payment.metadata.present? && payment.metadata["description"].present? %>
                          <%= payment.metadata["description"] %>
                        <% else %>
                          Payment
                        <% end %>
                      </td>
                      <td>$<%= sprintf('%.2f', payment.amount / 100.0) %></td>
                      <td>
                        <% if payment.data.dig("status") == "succeeded" %>
                          <span class="badge bg-success">Succeeded</span>
                        <% elsif payment.data.dig("status") == "pending" %>
                          <span class="badge bg-warning">Pending</span>
                        <% elsif payment.data.dig("status") == "failed" %>
                          <span class="badge bg-danger">Failed</span>
                        <% else %>
                          <span class="badge bg-secondary">Unknown</span>
                        <% end %>
                      </td>
                      <td>
                        <% if payment.data.dig("status") == "succeeded" && payment.data.dig("receipt_url").present? %>
                          <%= link_to "Receipt", payment.data.dig("receipt_url"), target: "_blank", class: "btn btn-sm btn-outline-primary" %>
                        <% else %>
                          -
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <h4>You don't have any payments yet</h4>
              <p class="text-muted">Make a payment to get started</p>
              <%= link_to "Make a Payment", new_payment_path, class: "btn btn-primary mt-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 