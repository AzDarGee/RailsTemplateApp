<div class="container py-4">
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Payment History</h5>
          <%= link_to "Billing Dashboard", billing_dashboard_path, class: "btn btn-sm btn-outline-secondary" %>
        </div>
        <div class="card-body">
          <% if @charges.present? %>
            <div class="table-responsive">
              <table class="table align-middle">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Currency</th>
                    <th>Status</th>
                    <th>Subscription</th>
                    <th class="text-end">Receipt</th>
                  </tr>
                </thead>
                <tbody>
                  <% @charges.each do |c| %>
                    <tr>
                      <td><%= l(c.created_at, format: :long) %></td>
                      <td><%= number_to_currency(c.amount.to_i / 100.0) %></td>
                      <td class="text-uppercase"><%= c.currency %></td>
                      <td>
                        <% refunded = c.respond_to?(:refunded?) ? c.refunded? : (c.amount_refunded.to_i > 0) %>
                        <% if refunded %>
                          <span class="badge bg-warning">refunded</span>
                        <% else %>
                          <span class="badge bg-success">paid</span>
                        <% end %>
                      </td>
                      <td>
                        <% if c.subscription_id.present? %>
                          <span class="badge bg-info">Subscription</span>
                        <% else %>
                          <span class="badge bg-secondary">One-time</span>
                        <% end %>
                      </td>
                      <td class="text-end">
                        <%= link_to "View / Download", billing_receipt_path(c), class: "btn btn-sm btn-outline-primary" %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted mb-0">You have no charges yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
