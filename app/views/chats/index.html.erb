<% content_for :title, "Chats" %>

<div class="row g-0 min-vh-100 p-4">
  <div class="col-12 d-flex flex-column">
    <div class="card rounded-0 h-100 shadow-sm" style="max-height: calc(100vh - 106px);">
      <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
          <i class="fa-solid fa-comments me-2"></i>
          <h5 class="mb-0">Chats</h5>
        </div>
        <div>
          <%= link_to new_chat_path, class: "btn btn-primary" do %>
            <i class="fa-solid fa-plus me-1"></i>
            New Chat
          <% end %>
        </div>
      </div>

      <% if @chats.any? %>
        <div class="card-body p-0 d-flex flex-column" style="min-height: 0;">
          <div id="chats" class="list-group list-group-flush flex-grow-1 overflow-auto" style="min-height: 0;">
            <% @chats.each do |chat| %>
              <%= link_to chat, class: "list-group-item list-group-item-action py-3" do %>
                <div class="d-flex w-100 align-items-center justify-content-between">
                  <div class="d-flex align-items-center">
                    <i class="fa-solid fa-message text-primary me-2"></i>
                    <div>
                      <div class="fw-semibold">Chat <%= chat.id %></div>
                      <div class="small text-muted">
                        <i class="fa-solid fa-microchip me-1"></i>
                        <%= chat.try(:model)&.name || "Model" %>
                      </div>
                    </div>
                  </div>
                  <div class="text-end small text-muted">
                    <% if chat.respond_to?(:messages) %>
                      <span class="badge text-bg-light border me-2">
                        <i class="fa-regular fa-message me-1"></i>
                        <%= chat.messages.size %>
                      </span>
                    <% end %>
                    <div>
                      <i class="fa-regular fa-clock me-1"></i>
                      <%= chat.updated_at&.strftime("%b %e, %I:%M %p") %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="card-body d-flex align-items-center justify-content-center text-center">
          <div class="text-muted">
            <i class="fa-regular fa-comments fa-2x mb-2"></i>
            <p class="mb-1">No chats yet</p>
            <p class="small mb-3">Start a new conversation to see it here.</p>
            <%= link_to new_chat_path, class: "btn btn-outline-primary" do %>
              <i class="fa-solid fa-plus me-1"></i>
              New Chat
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="card-footer d-flex justify-content-between align-items-center">
        <div class="small text-muted">
          <%= pluralize(@chats.size, "chat") %>
        </div>
        <div>
          <%= link_to chats_path, class: "btn btn-sm btn-outline-secondary" do %>
            <i class="fa-solid fa-rotate-right me-1"></i>
            Refresh
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>