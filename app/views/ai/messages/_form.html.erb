<%= form_with(model: [:ai, agent, conversation, message], 
                url: ai_agent_conversation_messages_path(agent, conversation), 
                class: "d-flex", 
                data: { 
                  controller: "reset-form", 
                  action: "turbo:submit-end->reset-form#reset", 
                  turbo_method: :post 
                }
              ) do |form| %>
  <%= form.text_area :content, class: "form-control me-2", placeholder: "Type your message...", required: true, autofocus: true %>
  <%= form.submit "Send", class: "btn btn-primary" %>
<% end %>