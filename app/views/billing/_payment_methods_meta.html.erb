<div class="d-flex justify-content-between align-items-center mb-2 small text-muted">
  <span>Saved cards: <%= payment_methods_count %> / <%= app_max_payment_methods %></span>
  <span id="payment_methods_meta_data" data-at-cap="<%= at_payment_method_cap ? '1' : '0' %>"></span>
</div>

<% if at_payment_method_cap %>
  <div class="alert alert-info small mb-2">
    You have reached the maximum number of saved cards allowed in this app. Please remove an existing card before adding a new one.
  </div>
<% end %>
